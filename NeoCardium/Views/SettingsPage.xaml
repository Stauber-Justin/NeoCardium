<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="NeoCardium.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:NeoCardium.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
            <TextBlock Text="Einstellungen: Passe dein Design an!" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="24"
                       FontWeight="Bold"/>
            <!-- Theme Toggle -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="10">
                <TextBlock Text="Dark Theme:" VerticalAlignment="Center" FontSize="18"/>
                <ToggleSwitch x:Name="ThemeToggleSwitch" 
                              IsOn="{Binding IsDarkTheme, Mode=TwoWay}" 
                              Toggled="ThemeToggleSwitch_Toggled"/>
            </StackPanel>
            <!-- Placeholder for additional customization options -->
            <TextBlock Text="Weitere Anpassungen in zukÃ¼nftigen Versionen." 
                       FontStyle="Italic" Foreground="Gray" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
