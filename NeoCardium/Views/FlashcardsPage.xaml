<?xml version="1.0" encoding="utf-8"?>
<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    
    x:Class="NeoCardium.Views.FlashcardsPage"
    xmlns:local="using:NeoCardium.Views"
    xmlns:models="using:NeoCardium.Models"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <NavigationView x:Name="FlashcardNavView">
        <NavigationView.Header>
            <TextBlock Text="Karteikarten" FontSize="24" FontWeight="Bold" Margin="12,0"/>
        </NavigationView.Header>

        <NavigationView.Content>
            <Grid Padding="20">
                <StackPanel>
                    <ListView x:Name="FlashcardsListView"
                              SelectionMode="Single"
                              ItemsSource="{Binding Flashcards}"
                              Height="300">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Flashcard">
                                <StackPanel Orientation="Vertical" Padding="10">
                                    <TextBlock Text="{x:Bind Question}" FontSize="18"/>
                                    <TextBlock Text="Antwort: {x:Bind Answer}" FontSize="14" Foreground="Gray"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="âœ Bearbeiten" Click="EditFlashcard_Click"/>
                                        <Button Content="ðŸ—‘ LÃ¶schen" Click="DeleteFlashcard_Click" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <Button Content="Neue Karteikarte erstellen" Click="AddFlashcard_Click" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </NavigationView.Content>
    </NavigationView>
</Page>
