<Page
    x:Class="NeoCardium.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:NeoCardium.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!-- Kontextmenü für EIN ausgewähltes Item -->
        <MenuFlyout x:Key="SingleCategoryContextFlyout">
            <MenuFlyoutItem Text="Bearbeiten" Click="EditCategory_Click"/>
            <MenuFlyoutItem Text="Löschen"    Click="DeleteCategory_Click"/>
        </MenuFlyout>

        <!-- Kontextmenü für MEHRERE ausgewählte Items -->
        <MenuFlyout x:Key="MultiCategoryContextFlyout">
            <MenuFlyoutItem Text="Extract (Placeholder)" Click="ExtractSelectedCategories_Click"/>
            <MenuFlyoutItem Text="Auswahl löschen"       Click="DeleteSelectedCategories_Click"/>
        </MenuFlyout>
    </Page.Resources>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Deine Kategorien"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1">
            <ListView x:Name="CategoryListView"
                      SelectionMode="Extended"
                      IsItemClickEnabled="True"
                      ItemClick="CategoryListView_ItemClick"
                      RightTapped="CategoryListView_RightTapped"
                      ItemsSource="{x:Bind Categories, Mode=OneWay}">

                <!-- KEIN ContextFlyout mehr direkt am Item -->
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Category">
                        <ListViewItem>
                            <TextBlock Text="{x:Bind CategoryName}" 
                                       FontSize="18" Margin="10,5"/>
                        </ListViewItem>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </ScrollViewer>

        <Button Grid.Row="2"
                Content="Neue Kategorie erstellen"
                Click="AddCategory_Click"
                HorizontalAlignment="Center"
                Margin="0,10,0,0"/>
    </Grid>
</Page>
