<?xml version="1.0" encoding="utf-8"?>
<Application
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    
    x:Class="NeoCardium.App"
    xmlns:local="using:NeoCardium"
    xmlns:helps="using:NeoCardium.Helpers"
    xmlns:converters="using:NeoCardium.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <helps:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <helps:BooleanToVisibilityConverter x:Key="BooleanToVisibilityInvertedConverter"/>
            <helps:BooleanToStartCancelConverter x:Key="BooleanToStartCancelConverter"/>
            <helps:AnswerIndexToGridColumnConverter x:Key="AnswerIndexToGridColumnConverter"/>
            <converters:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter"/>
            <converters:EnumToVisibilityConverter x:Key="BooleanToAnswerTextConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
